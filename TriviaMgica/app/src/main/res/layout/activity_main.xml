<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="200px"
        app:srcCompat="@drawable/Logo" />

    <TextView
        android:id="@+id/txt_mensaje_trivia"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:gravity="center"
        android:text="Trivia MÃ¡gica"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_opcion2"
        android:layout_width="331dp"
        android:layout_height="54dp"
        android:layout_gravity="center_horizontal"
        android:onClick="Empezar"
        android:text="Empezar"
        app:backgroundTint="#AF1308" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_desarrolladores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desarrollado por Lorena Campoverde y Carlos Torres"
            tools:layout_editor_absoluteX="62dp"
            tools:layout_editor_absoluteY="248dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>