<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="200px"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/txt_mensaje_trivia"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:gravity="center"
        android:text="Trivia MÃ¡gica"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_opcion2"
        android:layout_width="331dp"
        android:layout_height="54dp"
        android:layout_gravity="center_horizontal"
        android:onClick="mostrarTrivia"
        android:text="Empezar"
        app:backgroundTint="#AF1308" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_desarrolladores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="235dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="4dp"
            android:text="Desarrollado por Lorena Campoverde y Carlos Torres"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>